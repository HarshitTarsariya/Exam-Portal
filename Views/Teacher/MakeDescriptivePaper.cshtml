@model DescriptivePaperDTO
@{
    ViewData["Title"] = "MakeDescriptivePaper";
}


<div class="jumbotron my-5 shadow">
    <div class="text-center justify-content-center">
        <h1 class="display-3">Descriptive</h1><br />
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <form asp-action="MakeDescriptivePaper" method="post" enctype="multipart/form-data">
                    <div class="form-group shadow">
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-lg">Title</span>
                            </div>
                            <input type="text" asp-for="PaperTitle" required />
                        </div><br/>
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-lg">File</span>
                            </div>
                            <input type="file" accept="application/pdf" asp-for="paper" name="paper" required/>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-info m-2" value="Upload" required />
                        </div>
                    </div>
                </form>
                <span class="badge badge-danger">@ViewBag.Data</span>
            </div>
        </div>
    </div>
</div>